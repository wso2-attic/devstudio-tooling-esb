<?xml version="1.0" encoding="UTF-8"?>
<api context="/system" name="UsersRestAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" url-mapping="/users">
        <inSequence>
            <log description="Custom Log" level="custom">
                <property name="MESSAGE" value="Request received to /users resource."/>
            </log>
            <send description="Send Request to Users Endpoint">
                <endpoint key="UsersHttpEP"/>
            </send>
        </inSequence>
        <outSequence>
            <send description="Send Response Back to Client"/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>
