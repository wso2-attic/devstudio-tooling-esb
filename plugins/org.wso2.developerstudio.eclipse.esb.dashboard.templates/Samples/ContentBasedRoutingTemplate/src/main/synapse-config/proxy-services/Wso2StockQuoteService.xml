<?xml version="1.0" encoding="UTF-8"?>
<proxy name="Wso2StockQuoteService" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <log description="Log Request Payload" level="full"/>
            <header name="SOAPAction" scope="transport" value="urn:getSimpleQuote"/>
            <switch description="If the symbol is WSO2 sending the request to the endpoint. Otherwise, send back custom payload." source="//*[local-name() = 'symbol']">
                <case regex="WSO2">
                    <send description="Send request to the endpoint">
                        <endpoint key="StockQuoteEP"/>
                    </send>
                </case>
                <default>
                    <payloadFactory description="Build custom payload to send back" media-type="xml">
                        <format>
                            <Message xmlns="">Discard request. The 'symbol' must be WSO2.</Message>
                        </format>
                        <args/>
                    </payloadFactory>
                    <loopback/>
                </default>
            </switch>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </target>
</proxy>
