<?xml version="1.0" encoding="UTF-8"?>
<proxy name="EchoService" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <log description="Log Request Payload" level="full"/>
            <header description="Set SOAPAction Header" name="SOAPAction" scope="transport" value="urn:echoString"/>
            <send description="Send Request to Echo Endpoint">
                <endpoint key="EchoSoapEP"/>
            </send>
        </inSequence>
        <outSequence>
            <send description="Send Response Back to Client"/>
        </outSequence>
        <faultSequence/>
    </target>
</proxy>
